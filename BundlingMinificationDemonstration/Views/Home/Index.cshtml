
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/MyStyles")
    @Scripts.Render("~/Scripts/BuiltInScripts")
    <script>
        $(document).ready(function () {
            
            LoadEmployees();

            $("#btnSearch").click(function () {
                GetByEmployeeId();
            });
        });
